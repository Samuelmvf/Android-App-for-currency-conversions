<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HistoricActivity"
    android:background="@color/white"
    >
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ibBackToConvertCurrency"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/arrow_back"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/ibBackToConvertCurrency"
        android:text="@string/historic_title"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitleHistoric"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitleHistoric"
        android:orientation="horizontal"
        android:id="@+id/btActions"
        >

        <Button
            android:id="@+id/btAPIHistoric"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_inputs2"
            android:text="@string/historic_btAPI"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/btYourHistoric"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_inputs2"
            android:text="@string/historic_btYour"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btActions"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lvHistoric"
        android:visibility="invisible"
        />
</RelativeLayout>